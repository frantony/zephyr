set_ifndef(GCCMIPSMTI_TOOLCHAIN_PATH $ENV{GCCMIPSMTI_TOOLCHAIN_PATH})
set(       GCCMIPSMTI_TOOLCHAIN_PATH ${GCCMIPSMTI_TOOLCHAIN_PATH} CACHE PATH "GCCMIPSMTI install directory")
assert(    GCCMIPSMTI_TOOLCHAIN_PATH "GCCMIPSMTI_TOOLCHAIN_PATH is not set")

if(NOT EXISTS ${GCCMIPSMTI_TOOLCHAIN_PATH})
  message(FATAL_ERROR "Nothing found at GCCMIPSMTI_TOOLCHAIN_PATH: '${GCCMIPSMTI_TOOLCHAIN_PATH}'")
endif()

set(TOOLCHAIN_HOME ${GCCMIPSMTI_TOOLCHAIN_PATH})

set(COMPILER gcc)
set(LINKER ld)
set(BINTOOLS gnu)

set(CROSS_COMPILE_TARGET mips-mti-elf)
set(SYSROOT_TARGET       mips-mti-elf)

set(CROSS_COMPILE ${TOOLCHAIN_HOME}/bin/${CROSS_COMPILE_TARGET}-)
set(SYSROOT_DIR   ${TOOLCHAIN_HOME}/${SYSROOT_TARGET})
